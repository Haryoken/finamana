<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="hann.project.finamana.AddRecordActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/lblNewRecordInfo"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:padding="5dp"
        android:text="New Record"
        android:textAllCaps="true"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.46">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblHowMuch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How much ?"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtMoneyAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.83"
                android:text="Description"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rdgMoney"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Revenue" />

            <RadioButton
                android:id="@+id/rdExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expense" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.08"
                android:paddingLeft="5dp"
                android:text="Category"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />


        </LinearLayout>
        <TextView
            android:id="@+id/lblDate"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Date"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:ems="10"
                android:inputType="date"
                android:text="1/1/1970" />

            <Button
                android:id="@+id/btnChooseDate"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:text="Choose Date" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnDeleteRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light"
                android:gravity="center_vertical"
                android:text="Delete this Record"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/red_orange"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
